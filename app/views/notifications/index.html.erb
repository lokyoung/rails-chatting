<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      Notifications
    </div>
    <div class="panel-body">
      <% if @notifications.blank? %>
        None
      <% else %>
        <ul class="list-group">
          <% @notifications.each do |notification| %>
            <% if notification.unread? %>
              <li class="list-group-item list-group-item-warning">
                <% notification.update_attributes(unread: false) %>
              <% else %>
                <li class="list-group-item">
                <% end %>
                <%= notification.title %><br/>
                <%= notification.content %>
                <span id="notification-deal<%= notification.id %>">
                  <% unless notification.solved? %>
                    <span style="float: right" id="deal-room">
                      <%= link_to 'Accept', accept_join_path(notification), class: "btn btn-primary", remote: true %>
                      <%= link_to 'Reject', reject_join_path(notification), class: "btn btn-default", remote: true %>
                    </span>
                  <% end %>
                </span>
                </li>
              <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
